<% include ../shared/header.ejs %>
  <style media="screen">
    main {
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      align-items: center;
    }
		.card {
			margin-top: 1rem;
			margin-bottom: 1rem;
		}
		.card-body {
			display: flex;
		}
		.card-body .content {
			margin-left: 1rem;
		}
		img {
			max-height: 150px;
		}
		.card {
			color: black;
		}
		.card:hover {
			text-decoration: none;
			background-color: lightgrey;
			transition: 0.4s
		}
		h1 {
			margin-top: 2rem;
		}
  </style>
  <main style="min-height: 70vh;">
    <h1>Job Listings</h1>
		<% for(let i = 0; i < jobs.length; i++) { %>
    <a href="job/<%=jobs[i]._id%>" class="card" style="width: 80vw;">
      <div class="card-header">
      <%= jobs[i].companyName%>
      </div>
      <div class="card-body">
			<img src="/images/smwdb.png">
				<div class="content">
					<h5 class="card-title"><%= jobs[i].jobTitle%></h5>
        	<p class="card-text"><%= jobs[i].jobDescription%></p>
					<p class="blockquote-footer"><%= jobs[i].salary%></p>
				</div>
      </div>
    </a>
	<%}%>
  </main>

  <% include ../shared/footer.ejs %>
